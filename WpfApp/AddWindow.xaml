<Window x:Class="WpfApp.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Добавить" Height="400" Width="400" Loaded="Window_Loaded" Closing="Window_Closing" ResizeMode="NoResize">
    <Grid x:Name="grid">
        <TextBox x:Name="Url" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="300"/>
        <Button x:Name="Show" Content="Показать" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Show_Click" Margin="320,10,0,0" Width="60"/>
        <Button x:Name="Add" Content="Скачать" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Add_Click" Margin="68,33,0,0" Height="20"/>
        <CheckBox x:Name="CheckAll" Content="Все" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,35,0,0"/>
        <ListBox x:Name="ChapterListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Height="302" Width="370" Margin="10,58,0,0">
        </ListBox>
    </Grid>
</Window>
